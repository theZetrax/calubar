{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@calubar/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*"]
}
